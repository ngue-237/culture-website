{% extends 'baseB.html.twig' %}
{% block content %}

<!-- Page Wrapper -->
<div id="wrapper">

    <!-- Sidebar -->
    {{include('includes/backoffice/sidebar.html.twig')}}
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <!-- Topbar -->
            {{include('includes/backoffice/navbar.html.twig')}}
            <!-- End of Topbar -->

            <!-- Begin Page Content -->
            <div class="container-fluid">

                <!-- Page Heading -->
                <h1 class="h3 mb-2 text-gray-800">Tables</h1>


                <!-- DataTales Example -->
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">liste des blog</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <button onclick="window.location.href = 'http://127.0.0.1:8000/addblog';"> Ajouter un blog </button> <button onclick="window.location.href = 'http://127.0.0.1:8000/clnd';"> calendar </button>

                            <br>
                            </br>
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">

                                <tr>
                                    <th>ID</th>
                                    <th>titre</th>
                                    <th>contenu</th>
                                    <th>Image</th>
                                    <th>update</th>
                                    <th>Delete</th>
                                </tr>


                                <tr {% for c in listeblog %}>
                                    <td>{{ c.id }}</td>
                                    <td>{{ c.titre }}</td>
                                    <td>{{ c.cnt }}</td>
                                   <td><img src="{{ asset('uploads/images/' ~ c.photo) }}" alt="" style="width:50px;height:50px;">  </td>
                                    <td><a href="{{ path('d',{'id':c.id}) }}">Delete</a> </td>
                                    <td><a href="{{ path('updateblog',{'id':c.id}) }}">update</a> </td>
                                </tr {% endfor %}>


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->

        <!-- Footer -->
        <footer class="sticky-footer bg-white">
            <div class="container my-auto">
                <div class="copyright text-center my-auto">
                    <span>Copyright &copy; Your Website 2020</span>
                </div>
            </div>
        </footer>
        <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

</div>

{% extends 'baseB.html.twig' %} {% block title %}Commandes | culture{% endblock
%} {% block content %}
<!-- Page Wrapper -->
<div id="wrapper">
  <!-- Sidebar -->
  {{ include("includes/backoffice/sidebar.html.twig") }}
  <!-- End of Sidebar -->

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
      <!-- Topbar -->
      {{ include("includes/backoffice/navbar.html.twig") }}
      <!-- End of Topbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
          <h1 class="h3 mb-0 text-gray-800">Gestion des commandes</h1>
        </div>

        <div class="card shadow mb-4">
          <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Liste commandes</h6>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table
                class="table table-bordered text-center"
                id="dataTable"
                width="100%"
                cellspacing="0"
              >
                <thead>
                  <tr>
                    <th>ID User</th>
                    <th>Prix Total</th>
                    <th>Date</th>
                    <th>status</th>
                    <th>Options</th>
                  </tr>
                </thead>
                <tfoot>
                  <tr>
                    <th>ID User</th>
                    <th>Prix Total</th>
                    <th>Date</th>
                    <th>status</th>
                    <th>Options</th>
                  </tr>
                </tfoot>
                <tbody>
                  {% for commande in commandes %}
                  <tr>
                    <td>{{ commande.idUser }}</td>
                    <td>{{ commande.totalPaiment }}</td>
                    <td>
                      {{ commande.date | date('d/m/Y') }} à
                      {{ commande.date | date('H:i')}}
                    </td>
                    <td>
                      {% set var = 1%} {% if commande.status == var %}
                      <i class="fas fa-check"></i>
                      {%else%}
                      <i class="fas-solid fa-xmark"></i>
                      {%endif%}
                    </td>
                    <td>
                      <a
                        href="{{
                          path('commande_detail', { id: commande.id })
                        }}"
                      >
                        <i class="fas fa-eye"></i
                      ></a>
                      &nbsp;
                      <a
                        href="{{
                          path('commande_supprimer', { id: commande.id })
                        }}"
                      >
                        <i class="fas fa-trash-alt"></i></a
                      >&nbsp;
                      <a
                        href="{{
                          path('facture_download', { id: commande.id })
                        }}"
                      >
                        <i class="fas fa-file-invoice-dollar"></i></a
                      >&nbsp;
                    </td>
                  </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <!-- Footer -->
    {{ include("includes/backoffice/footer.html.twig") }}
    <!-- End of Footer -->
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<div
  class="modal fade"
  id="logoutModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
        <button
          class="close"
          type="button"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <div class="modal-body">
        Select "Logout" below if you are ready to end your current session.
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" type="button" data-dismiss="modal">
          Cancel
        </button>
        <a class="btn btn-primary" href="login.html">Logout</a>
      </div>
    </div>
  </div>
</div>

{% endblock %}

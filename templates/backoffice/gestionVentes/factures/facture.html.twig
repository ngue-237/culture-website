<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Facture</title>
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 ">
            <a href="{{ path('facture_download', {'id':commande.id}) }}">
                <button class="btn btn-primary">
                    Télécharger La Facture
                </button>
            </a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 offset-5 ">
            <h1> Votre facture</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <h4> Identifiant Utilisateur : {{ commande.idUser }}</h4>
        </div>
        <div class="col-lg-6 ">
            <h4> Date <span>
                {{ commande.date | date("d/m/y à h:m") }}
            </span>
            </h4>
        </div>
    </div>
    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">Nom Produit</th>
            <th scope="col">Prix unitaire</th>
            <th scope="col">Quantité</th>
        </tr>
        </thead>
        <tbody>
        {% for prod in produits %}
            <tr>
                <td>{{ prod.produit.nom }}</td>
                <td>{{ prod.produit.prix }}</td>
                <td>{{ prod.quantite }}</td>
            </tr>
        {% endfor %}

        </tbody>
        <tfoot>
        <th scope="col"></th>
        <th scope="col-2"></th>
        <th scope="col">total:  {{ commande.totalPaiment }} Dt</th>
        </tfoot>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>